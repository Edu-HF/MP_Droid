<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="106dp"
              android:layout_height="120dp"
              android:background="@color/grayBlack"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_dark">

        <android.support.v7.widget.AppCompatImageView android:layout_width="50dp" android:layout_height="50dp"
                                                      android:id="@+id/cat_row_ic"
                                                      android:layout_gravity="center"
                                                      android:layout_marginTop="10dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:id="@+id/cat_row_name"
                  android:textColor="@color/white"
                  android:text="@string/cat_all"
                  android:maxLines="2" android:textAlignment="center" android:textSize="14sp"
                  android:textStyle="normal"/>

    </LinearLayout>



</LinearLayout>
